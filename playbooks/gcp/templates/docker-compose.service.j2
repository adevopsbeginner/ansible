[Unit]
Description=Docker Compose Service
Requires=docker.service
After=docker.service

[Service]
Type=simple
WorkingDirectory=/home/{{ ansible_user }}
ExecStart=/usr/bin/docker-compose -f /home/{{ ansible_user }}/docker-compose.yml up
ExecStop=/usr/bin/docker-compose -f /home/{{ ansible_user }}/docker-compose.yml down
Restart=always
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
